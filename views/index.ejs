<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css">
  </head>
  <body id="body">
    <div class="head">
    <h3>All chats</h3>
    </div>
    <div class="newchat">
    <form method="GET" action="/chats/new">
        <button type="submit" class="btn btn-success">New Chat</button>
    </form>
    </div>
    <% for(let chat of chats){ %>
    <div class="chat">
      <p>From: <%= chat.from %></p>
      <div class="msg">
        <p><%= chat.msg %></p>
        </div>
        <div class="button">
        <form method="GET" action="/chats/<%= chat._id %>/edit">
          <button type="submit" class="btn btn-primary btn-sm">Edit</button>
        </form>
        <br>
        <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
          <button type="submit" class="btn btn-primary btn-sm">Delete</button>
        </form>
        
      </div>

      <p>Received by <%= chat.to %></p>
      <hr>
      <p><%= chat.created_at.toString().split(" ")[4]%></p>
      <p><%= chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
    </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
